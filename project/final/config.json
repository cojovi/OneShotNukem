{
  "name": "OneShot Predator Nukem",
  "version": "1.0.0",
  "description": "Retro 2.5D FPS game with Texas ranch setting",
  "performance": {
    "targetFPS": 60,
    "maxFrameTime": 16.67,
    "enableVSync": true,
    "enablePerformanceMonitoring": true
  },
  "graphics": {
    "resolution": {
      "width": 1280,
      "height": 720
    },
    "aspectRatio": "16:9",
    "pixelated": true,
    "antialiasing": false
  },
  "audio": {
    "masterVolume": 1,
    "musicVolume": 0.7,
    "sfxVolume": 0.8,
    "enableSpatialAudio": true
  },
  "controls": {
    "mouseSensitivity": 1,
    "invertY": false,
    "keyBindings": {
      "forward": "KeyW",
      "backward": "KeyS",
      "left": "KeyA",
      "right": "KeyD",
      "jump": "Space",
      "sprint": "ShiftLeft",
      "shoot": "Mouse0",
      "aim": "Mouse2",
      "reload": "KeyR",
      "menu": "Escape"
    }
  },
  "optimization": {
    "enableObjectPooling": true,
    "enableFrustumCulling": true,
    "enableLOD": false,
    "maxSprites": 100,
    "maxParticles": 200
  }
}